<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.calculatrice.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="960dp"
        android:layout_weight="1"
        android:background="@color/black">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="386dp"
            android:layout_height="241dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/displayTextView"
            app:layout_constraintVertical_bias="0.728">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1pt">

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/orange"

                    android:text="AC"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/PlusMins2"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="#141313"

                    android:backgroundTint="@color/orange"
                    android:text="+/-"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/buttonPercent"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"

                    android:text="%"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/buttonDivide"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange"

                    android:text="รท"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_marginBottom="1pt">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"

                    android:background="@color/grey"
                    android:text="7"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="8"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="9"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/buttonMultiply"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:onClick="OpEvent"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1pt">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="4"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="5"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="6"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/buttonSubtract"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:onClick="OpEvent"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginBottom="1pt">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="1"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="2"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="3"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/buttonAdd"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:onClick="OpEvent"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="4dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1.3pt"
                    android:layout_marginRight="1.3pt"
                    android:layout_weight="2"
                    android:background="@color/purple_200"
                    android:onClick="NumberEvent"
                    android:text="0"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/buttondot"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/buttonbackground"
                    android:onClick="NumberEvent"
                    android:text="."
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange"

                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle" />
            </TableRow>
        </TableLayout>


        <EditText
            android:id="@+id/displayTextView"
            android:layout_width="859dp"
            android:layout_height="74dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:ems="10"
            android:enabled="true"
            android:focusable="false"
            android:gravity="end"
            android:inputType="textPersonName"
            android:padding="15sp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
